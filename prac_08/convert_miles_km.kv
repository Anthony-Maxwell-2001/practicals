BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size: 40
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
                font_size: 40
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)
                font_size: 40
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate(input_miles.text)
        font_size: 40
    Label:
        text: app.output
        font_size: 40


